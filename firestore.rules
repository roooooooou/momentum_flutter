rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 允許服務端函數讀取用戶列表（用於每日數據聚合）
    match /users/{userId} {
      allow read, list: if true; // 服務端函數需要讀取和列出用戶
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // === 新的數據結構支持 ===
    
    // 實驗組事件數據
    match /users/{userId}/experiment_events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 事件通知數據
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 事件聊天數據
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // 聊天消息數據
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // 閱讀數據
      match /reading/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 詞彙學習數據
      match /vocab/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // 詞彙測驗嘗試結果（新增）
      match /vocab_quiz_attempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // 對照組事件數據
    match /users/{userId}/control_events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 事件通知數據
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 事件聊天數據
      match /chats/{chatId} {
        allow read, write: if request.auth.uid == userId;
        
        // 聊天消息數據
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // 閱讀數據
      match /reading/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 詞彙學習數據
      match /vocab/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // 詞彙測驗嘗試結果（新增）
      match /vocab_quiz_attempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // 會話數據
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 實驗測驗結果（新路徑）
    match /users/{userId}/experiment_quiz/{quizId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 每日指標數據
    match /users/{userId}/daily_metrics/{dateId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 每日報告數據
      match /daily_report/{reportId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // === 兼容舊數據結構（逐步遷移期間） ===
    
    // 舊的實驗組數據結構
    match /users/{userId}/experiment/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 舊的對照組數據結構
    match /users/{userId}/control/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 舊的事件數據結構
    match /users/{userId}/events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 閱讀數據
      match /reading/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 詞彙學習數據
      match /vocab/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // 舊的應用使用會話數據
    match /users/{userId}/app_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 舊的每日報告數據
    match /users/{userId}/daily_reports/{reportId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // === 系統管理相關 ===
    
    // 允許服務端函數寫入執行日志
    match /daily_metrics_execution_log/{document} {
      allow write: if true; // 定時器函數需要寫入執行記錄
      allow read: if request.auth != null;
    }
    
    // 允許測試定時器寫入記錄
    match /test_scheduler/{document} {
      allow write: if true; // 測試定時器需要寫入記錄
      allow read: if request.auth != null;
    }
    
    // 實驗配置統計（管理員查看用）
    match /experiment_stats/{document} {
      allow read: if request.auth != null;
      allow write: if true; // 允許函數寫入統計數據
    }
  }
} 